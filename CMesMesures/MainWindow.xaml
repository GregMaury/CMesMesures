<Window x:Class="CMesMesures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMesMesures"
        mc:Ignorable="d"
        Title="C Mes Mesures" Height="350" Width="525">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <TextBox Name="txtNamePicture" BorderThickness="0" />
            <Button x:Name="btnOpenPicture" Click="btnOpenPicture_Click" Content="Ouvrir l'image"/>
            <Image x:Name="imageBox"/>
        </WrapPanel>
    </Grid>
</Window>
